<h1>Posts</h1>
<%= link_to 'New Post', new_post_path, class: 'btn btn-primary mb-3' %>

<%= form_with(url: posts_path, method: :get, local: true, class: "mb-3") do %>
  <div class="input-group">
    <%= text_field_tag :q, params[:q], class: "form-control", placeholder: "Search posts" %>
    <div class="input-group-append">
      <%= submit_tag 'Search', class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post %></td>
      <td>
        <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary' %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
